<Window x:Class="Money.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money"
        mc:Ignorable="d"
        Title="AddCategory" Height="450" Width="500">
    <Grid>
        <Label Content="Добавление новой категории" VerticalAlignment="Top" FontSize="25" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        <TextBlock Text="Тип операции" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0" FontSize="20"/>
        <ComboBox x:Name="Operations" Width="200" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,130,0,0"/>
        <TextBlock Text="Название" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,170,0,0" FontSize="20"/>
        <TextBox x:Name="Name" Width="150" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,220,0,0" />
        <Button x:Name="Add" Width="150" Height="25" Content="Добавить" Margin="0,150,0,0" Click="Add_Click"/>
    </Grid>
</Window>
