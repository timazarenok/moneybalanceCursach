<Window x:Class="Money.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="400">
    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,50,0,0">Смена валюты</Label>
        <ComboBox x:Name="Wallets" Width="120" Height="25"/>
        <Button x:Name="Update" Width="120" Height="25" Margin="0,100,0,0" Content="Обновить" Click="Update_Click"/>
    </Grid>
</Window>
