<Application x:Class="Money.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Money"
             StartupUri="Login.xaml">
    <Application.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3c6e71"/>
            <Setter Property="Foreground" Value="#353535"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5,10,5,0"/>
        </Style>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#fdfffc"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3c6e71"/>
        </Style>
    </Application.Resources>
</Application>
