<Window x:Class="Money.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money"
        mc:Ignorable="d"
        Title="AddWindow" Height="350" Width="500">
    <Grid>
        <Label Margin="0,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25">Доход</Label>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,70,0,0" Text="Категория дохода"/>
        <ComboBox x:Name="Categories" Width="200" Height="25" Margin="0,100,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,140,0,0" Text="Кол-во дохода"/>
        <TextBox x:Name="Value" Width="150" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,170,0,0" />
        <Button x:Name="Add" Content="Добавить" Width="120" Height="25" Margin="0,150,0,0" Click="Add_Click"/>
    </Grid>
</Window>
