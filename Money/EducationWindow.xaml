<Window x:Class="Money.EducationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Money"
        mc:Ignorable="d"
        Title="EducationWindow" Height="300" Width="400">
    <Grid>
        <Label HorizontalAlignment="Center" VerticalAlignment="Top">Добавить расходы на обучение</Label>
        <Button x:Name="Excel" Width="120" Height="25" Content="Отчет в Excel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,100"/>
        <TextBox x:Name="Value" Width="150" Height="25" />
        <Button x:Name="Add" Width="120" Height="25" Content="Добавить" PreviewTextInput="Add_PreviewTextInput" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,100,0,0" Click="Add_Click"/>
    </Grid>
</Window>
